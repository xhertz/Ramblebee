<!DOCTYPE html>
<html>
<head>
  <title>Points</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>



<div id="user_nav">
<% if user_signed_in? %>
<p>You are signed in as <%= current_user.email %>. Not you? <%= link_to 'Sign out', destroy_user_session_path %></p>
<% else %>

<p>
<%= link_to image_tag("fb_button.png"), user_omniauth_authorize_path(:facebook) %>
<%= link_to 'login', new_user_session_path %> or <%= link_to 'Sign up', new_user_registration_path %></p>

<% end %>
</div>


<div id="top_bar">
	<h2>Tours</h2>
	<div id="flash">
<% if flash[:notice] %>
 <p class="notice"><%= notice %></p>
<% end %>
<% if flash[:alert] %>
<p class="alert"><%= alert %></p>
<% end %>
	</div>
</div>

<%= yield %>



</body>
</html>
